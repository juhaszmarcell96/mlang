function pow (a, b) {
    if (b <= 0) {
        return 0;
    }
    var result = a;
    for (; b > 1; --b) {
        result *= a;
    }
    return result;
}
/* this is a comment */
var base = 2; /* this works as well */
var exponent = 10;
/* comment can be put in between statements, but cannot be embedded */

var result = pow(base, exponent);

print("the result of %d^%d is %d\n", base, exponent, result);